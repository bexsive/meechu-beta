<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.inertiamobility.meechu">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <activity android:name="com.inertiamobility.meechu.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.inertiamobility.meechu.MainActivity"/>
        <activity
            android:name="com.inertiamobility.meechu.RegisterActivity"
            android:label="@string/title_activity_register" />
        <activity
            android:name="com.inertiamobility.meechu.BuildEventActivity"
            android:label="@string/title_activity_build_event"></activity>
        <activity
            android:name="com.inertiamobility.meechu.ProfileActivity"
            android:label="@string/title_activity_profile"></activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_place_api" />
    </application>
</manifest>
